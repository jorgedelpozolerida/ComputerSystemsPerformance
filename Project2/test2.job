#!/bin/bash

#SBATCH --job-name=pytorch-test
#SBATCH --output=job.%j.out
#SBATCH --cpus-per-task=8
#SBATCH --gres=gpu
#SBATCH --time=02:00:00
#SBATCH --partition=brown
#SBATCH --mail-type=FAIL,END

module load Anaconda3
module load cuDNN/7.6.4.38-gcccuda-2019b
module load CUDA/10.1.243-GCC-8.3.0
module load fosscuda/2020a
module load TensorFlow/2.3.1-fosscuda-2020a-Python-3.8.2

module load typing-extensions/3.7.4.3-GCCcore-9.3.0-Python-3.8.2
module load SciPy-bundle/2020.03-foss-2020a-Python-3.8.2

source activate p2_tensor

nvcc -V

nvidia-smi

echo "************* \n"

nvidia-smi --query-gpu=timestamp,power.draw,temperature.gpu,memory.used --format=csv --loop-ms=1000 > "./experiments/gpu/tensorflow/test.csv" & 
serverPID=$!
python ./src/training_tensorflow.py --dataset=SVHN --resnet_size=resnet50 --device=gpu --batch_size=128 --epochs=10 --run=-1
kill $serverPID
